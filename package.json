{
  "name": "react-express-psql-webpack",
  "version": "0.0.1",
  "description": "starter for projects",
  "main": "index.js",
  "scripts": {
    "build:client": "webpack --mode production",
    "build:server": "npx babel src/server --out-dir build/server --copy-files",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "dev:server": "nodemon src/server/index.js --exec babel-node",
    "dev": "concurrently 'npm run dev:server' 'npm run client'",
    "migrate": "npx sequelize db:migrate",
    "server": "npx sequelize db:migrate && NODE_OPTIONS=--max_old_space_size=8192 node build/server/index.js",
    "test": "jest tests/"
  },
  "author": "romeldris",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "express": "^4.16.3",
    "pg": "^7.5.0",
    "pg-hstore": "^2.3.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "sequelize": "^4.39.0",
    "superagent": "^4.0.0-beta.5"
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "jsxBracketSameLine": true,
    "bracketSpacing": false,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "sequelize-cli": "^4.1.1",
    "style-loader": "^0.23.0",
    "supertest": "^3.3.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4"
  }
}
